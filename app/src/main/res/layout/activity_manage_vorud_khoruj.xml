<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:id="@+id/activity_manage_vorud_khoruj"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.alireza.parking.Activity.ManageVorudKhorujActivity">
    <RadioGroup

        android:id="@+id/radioGroup_vorud_khoruj"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >
        <RadioButton

            android:layout_margin="10dp"
            android:background="@drawable/edit_text_shape"
            android:gravity="left|center"
            android:layout_weight="1"
            android:text="صبح"
            android:id="@+id/vorud_khoruj_list_sob"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:checked="true" />
        <RadioButton
            android:layout_margin="10dp"
            android:background="@drawable/edit_text_shape"
            android:gravity="left|center"
            android:id="@+id/vorud_khoruj_list_asr"
            android:layout_weight="1"
            android:text="بعد از ظهر"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </RadioGroup>
    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_weight="1"
            android:singleLine="true"
            android:background="@drawable/list_back"
            android:text="شیفت"
            android:textSize="15dp"
            android:gravity="center"

            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <TextView
            android:layout_weight="1"
            android:singleLine="true"
            android:background="@drawable/list_back"
            android:textSize="15dp"
            android:gravity="center"

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="مبلغ"/>
        <TextView
            android:gravity="center"
            android:singleLine="true"
            android:layout_weight="1"
            android:background="@drawable/list_back"
            android:textSize="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="پلاک"/>
    </LinearLayout>
    <ListView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/vorud_khoruj_list_view"></ListView>
</LinearLayout>
