<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:id="@+id/activity_daramad_by_status"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.alireza.parking.Activity.DaramadByStatusActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_weight="1"
            android:singleLine="true"
            android:background="@drawable/list_back"
            android:text="روز"
            android:textSize="15dp"
            android:gravity="center"

            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <TextView
            android:layout_weight="1"
            android:singleLine="true"
            android:background="@drawable/list_back"
            android:textSize="15dp"
            android:gravity="center"

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="مبلغ"/>
        <TextView
            android:gravity="center"
            android:singleLine="true"
            android:layout_weight="1"
            android:background="@drawable/list_back"
            android:textSize="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="تاریخ"/>
    </LinearLayout>
    <ListView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/daramad_list_view_by_status"></ListView>
</LinearLayout>
