<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:padding="20dp"
    android:background="@drawable/edit_text_shape"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >
    <TextView
        android:background="@drawable/main_green"
        android:textSize="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="name"
        android:layout_margin="15dp"
        android:id="@+id/gharardad_list_view_item_name"/>
    <TextView
        android:layout_marginTop="5dp"
        android:background="@drawable/main_violet"
        android:textSize="20dp"
        android:layout_margin="15dp"

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="pelak"
        android:id="@+id/gharardad_list_view_item_pelak"/>
    <TextView
        android:layout_marginTop="5dp"
        android:background="@drawable/main_blue"
        android:text="mablagh"
        android:textSize="20dp"
        android:layout_margin="15dp"

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/gharardad_list_view_item_mablagh"/>
</LinearLayout>