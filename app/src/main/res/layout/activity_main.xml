<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.alireza.parking.Activity.MainActivity">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="0.75">
        <TextView

            android:id="@+id/main_sob"
            android:layout_margin="5dp"
            android:textSize="20dp"
            android:textColor="#000"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_weight="1"
            android:background="@drawable/main_blue"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="درآمد صبح :  \nدرآمدی ثبت نشده است"/>
        <TextView
            android:id="@+id/main_asr"
            android:layout_margin="5dp"
            android:textSize="20dp"
            android:textColor="#000"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_weight="1"
            android:background="@drawable/main_yellow"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="درآمد بعد از ظهر : \n درآمدی ثبت نشده است"/>
    </LinearLayout>
    <LinearLayout
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:id="@+id/manage_vorud_khoruj_txt"
            android:layout_margin="5dp"
            android:textSize="20dp"
            android:padding="20dp"
            android:textColor="#000"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_weight="1"
            android:background="@drawable/main_orange"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="مدیریت ورود و خروج"/>

        <TextView
            android:id="@+id/new_gharardad_txt"
            android:textSize="20dp"
            android:layout_margin="5dp"
            android:padding="20dp"
            android:gravity="center"
            android:textColor="#000"
            android:text="صدور قرارداد"
            android:background="@drawable/main_red"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"></TextView>
    </LinearLayout>
    <LinearLayout
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:id="@+id/manage_gharardad_txt"
            android:textSize="20dp"
            android:layout_margin="5dp"
            android:padding="20dp"
            android:textColor="#000"
            android:text="مدیریت قرارداد"
            android:gravity="center"
            android:background="@drawable/main_violet"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"></TextView>
        <TextView
            android:id="@+id/manage_daramad_txt"
            android:textSize="20dp"
            android:layout_margin="5dp"
            android:padding="20dp"
            android:text="مدیریت درآمد روزانه"
            android:textColor="#000"
            android:gravity="center"
            android:background="@drawable/main_green"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"></TextView>
    </LinearLayout>



</LinearLayout>
